<% layout("/layouts/boilerplate") -%>

<h1>Create a new listing</h1>
        <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="mb-3 col-md-9">
                <label for="title" class="form-label">Enter title</label>
                <input 
                    type="text" 
                    name="listing[title]"  
                    class="form-control" required/>
                <div class="valid-feedback">Tittle looks good</div>
            </div>
        <div class="row">
            <div class="mb-3 col-md-3">
                <label for="price" class="form-label">Enter price:</label><br>
                <input type="text" id="price" name="listing[price]" class="form-control" required>
            </div>
            <div class="mb-3 col-md-6">
                <label for="image-url" class="form-label">Upload Listing Image</label><br>
                <input type="file" id="image-url" name="listing[image]" class="form-control" required>
            </div>
        </div>
            <div class="mb-3 col-md-9">
                <label for="image-filename" class="form-label">Image Filename:</label><br>
                <input type="text" id="image-filename" name="listing[image.filename]" class="form-control" required>
            </div>
           
            <div class="mb-3 col-md-9">
                <label for="description" class="form-label" >Description:</label><br>
                <input type="text" id="description" name="listing[description]" class="form-control  description" required>
            </div>
          <div class="row">
            <div class="mb-3 col-md-4">
                <label for="location" class="form-label">Location:</label><br>
                <input type="text" id="location" name="listing[location]" class="form-control" required>
            </div>
          
        
            <div class="mb-3 col-md-5">
                <label for="country" class="form-label">Country:</label><br>
                <input type="text" id="country" name="listing[country]" class="form-control" required>
            </div>
          </div>
        
            
            <button class="hi">submit</button> 
        </form>
    </body>